<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/skyblues"
    android:outlineSpotShadowColor="@color/black"
    android:outlineAmbientShadowColor="@color/black"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp">


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="6dp"
        android:padding="20dp"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:text="Food items:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/reSfooditemslist"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"

                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout

            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:text="Feed Count:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/reSfeedcountlist"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"

                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout

            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:text="Date Time:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/reSdatetimelist"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout

            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:text="Status:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/reSstatuslist"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"

                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>